*{
    margin: 0;
    padding: 0;
}

div{
    position: absolute;
    width: 100%;
    text-align: center;
}
h1{
    text-align: center;
}

h2{
    text-transform: capitalize;
}

li{
    margin: 5px 10px;

}

a{
    text-transform: capitalize;
}
.container {
    margin: 0 auto;
    position: relative;
    max-width: 500px;
    height: 100vh;
}

.list-group-item > a{
    text-decoration: none;
    color: black;
    font-size: 18px;
}